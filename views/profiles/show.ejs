<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>


<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
  <h1><%= isSelf ? title : `${profile.name}'s Playlists!` %></h1>

<% if (isSelf) { %>
  <form action="/playlists/new">
    <button type="submit">Add Playlist </button>
  </form>
<% } %>

  <section>
    <% playlists.forEach (p => { %>
        <p><%= p.name %></p>
    <% }) %>
  </section>

</main> 




<%- include('../partials/footer') %>