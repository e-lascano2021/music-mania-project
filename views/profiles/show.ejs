<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>


<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
  <h1><%= isSelf ? title : `${profile.name}'s Playlists!` %></h1>

<% if (isSelf) { %>
  <form action="/playlists/new">
    <button type="submit">Add Playlist </button>
  </form>
<% } %>

    <% playlists.forEach (p => { %>
      <form>
        <h3><%= p.name %></h3>
        <h3><%= p.description %></h3>
        <h3>
          <a href="/playlists/<%= p._id %>">
            Details
          </a>
        </h3>
      </form>
    <% }) %>  

</main> 




<%- include('../partials/footer') %>