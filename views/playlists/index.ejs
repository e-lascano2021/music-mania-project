<%- include('../partials/nav') %>

<h1><%= title %></h1>

<% playlists.forEach(playlist => { %>
  <form>
    <h3>
      <a href="/playlists/<%= playlist._id %>">
        <%= playlist.name %>
      </a>
    </h3><br>
    <p><%= playlist.description %></p><br>
    <h4>By: <%= playlist.owner.name %> </h4>
  </form>
<% }) %>

